{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./app/",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["components/*"],
      "@/ui/*": ["ui/*"],
      "@/screens/*": ["screens/*"],

      "@/hooks/*": ["hooks/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["config/*"],
      "@/services/*": ["services/*"],
      "@/utils/*": ["utils/*"],
      "@/store/*": ["store/*"],
      "@/assets/*": ["assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
